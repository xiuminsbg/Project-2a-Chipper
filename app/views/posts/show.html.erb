<p id="notice"><%= notice %></p>

<%= render 'form', post: @post %>
<p>
  <strong>Comment:</strong>
  <% if user_logged_in? %>
    <% @post.each do |p| %>
      <%= p.title %>
      <%= p.body %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
